<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.lct.Employee" table="employee" schema="mydb">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned"/>
        </id>
        <property name="first_name">
            <column name="first_name" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="salary">
            <column name="salary" sql-type="float(10,2)" precision="10" scale="2"/>
        </property>
    </class>
</hibernate-mapping>